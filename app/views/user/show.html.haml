.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to image_tag("#{@user.avatar}", class: "media-object", alt: "64x64", data: {holder: {rendered: true}}, data: {src: "holder.js/64x64"}, style: "width: 64px; height: 64px;"), user_path(@user)
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.username
          %span.label.label-default.project-number
            29
            %i Projects
        .proto-user
          %span.degree= @user.member
        .row
          .col-md-6
            %h4 Profile
            %p= @user.profile
          .col-md-6
            %h4 Works
            %p= @user.works
.container.proto-list
  .row
    - @user.prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to image_tag("sample.png"), prototype_path(prototype)
          .caption
            %h3= prototype.title
            .proto-meta
              .proto-date
                = prototype.created_at
            %ul.proto-tag-list.list-inline
              %li
                = link_to 'iPad', '#', class: "btn btn-default"
              %li
                = link_to 'wireframe', '#', class: "btn btn-default"
.text-center
  %ul.pagination
    %li.disabled
      %a{aria: {label: "Previous"}, href: "#"}
        %span{aria: {hidden: "true"}} «
    %li.active
      %a{href: "#"}
        1
        %span.sr-only (current)
    %li
      = link_to "2", "#"
    %li
      = link_to "3", "#"
    %li
      = link_to "4", "#"
    %li
      = link_to "5", "#"
    %li
      %a{aria: {label: "Next"}, href: "#"}
        %span{aria: {hidden: "true"}} »

