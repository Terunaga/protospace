%h2 Register
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :username
    %br/
    = f.text_field :username, placeholder: "Username"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, placeholder: "E-Mail"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off", placeholder: "Password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation password"
  .field
    = f.label :member
    %br/
    = f.text_field :member, placeholder: "Member"
  .field
    = f.label :profile
    %br/
    = f.text_area :profile, placeholder: "Profile"
  .field
    = f.label :works
    %br/
    = f.text_area :profile, placeholder: "Works"
  .actions
    = f.submit "Save"
= render "devise/shared/links"

