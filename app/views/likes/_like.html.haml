- if @like.present?
  = link_to prototype_like_path(@prototype, @like), method: :delete, remote: true do
    %button.btn.btn-default
      =image_tag("icon_heart.svg")
      Like
      %span.num
        = @likes.count
- else
  = link_to prototype_likes_path(@prototype), method: :post, remote: true do
    %button.btn.btn-default
      =image_tag("icon_heart.svg")
      Like
      %span.num
        = @likes.count

