.container.proto-new
  = form_for @prototype do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, placeholder: "Title", type: "text", class: "proto-new-title"
      .row
        .col-md-12
          .cover-image-upload
            = f.fields_for :thumbnails, @prototype.main_thumbnails do |t|
              = t.file_field :name
              = t.hidden_field :status, value: :main
        .col-md-12
          %ul.proto-sub-list.list-group
            - 2.times do
              = f.fields_for :thumbnails, @prototype.sub_thumbnails do |t|
                %li.list-group-item.col-md-4
                  .image-upload
                    = t.file_field :name
                    = t.hidden_field :status, value: :sub

            = f.fields_for :thumbnails do |t|
              %li.list-group-item.col-md-4#hide-form
                .image-upload
                  = t.file_field :name
                  = t.hidden_field :status, value: :sub
            %li.list-group-item.col-md-4#show-form
              .image-upload-plus
                %span +
      .row.proto-description
        = f.text_field :catch_copy, placeholder: "Catch Copy", type: "text", class: "col-md-12"
        = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4", class: "col-md-12"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              =text_field_tag "prototype[tag][]", "", placeholder: "Web Design"
            .col-md-3
              =text_field_tag "prototype[tag][]", "", placeholder: "UI"
            .col-md-3
              =text_field_tag "prototype[tag][]", "", placeholder: "Application"

      .row.text-center.proto-btn
        = f.submit "Publish", class: "btn btn-lg btn-primary btn-block"

