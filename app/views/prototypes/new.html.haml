.container.proto-new
  = form_for @prototype do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, placeholder: "Title", type: "text", class: "proto-new-title"
      .row
        .col-md-12
          .cover-image-upload
            %input{type: "file"}/
        .col-md-12
          %ul.proto-sub-list.list-group
            %li.list-group-item.col-md-4
              .image-upload
                %input{type: "file"}/
            %li.list-group-item.col-md-4
              .image-upload
                %input{type: "file"}/
            %li.list-group-item.col-md-4
              .image-upload-plus
                %span +
      .row.proto-description
        = f.text_field :catch_copy, placeholder: "Catch Copy", type: "text", class: "col-md-12"
        = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4", class: "col-md-12"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              %input{type: "text", placeholder: "Web Design"}/
            .col-md-3
              %input{type: "text", placeholder: "UI"}/
            .col-md-3
              %input{type: "text", placeholder: "Application"}/
      .row.text-center.proto-btn
        = f.submit "Publish", class: "btn btn-lg btn-primary btn-block"

